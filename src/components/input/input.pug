mixin input(inputCaption, inputType)   
    div.input
        if inputCaption && inputType
            h3.input__caption= inputCaption
            h3.input__type= inputType
            input(class!=attributes.class placeholder!=attributes.placeholder type!=attributes.type name!=attributes.name)
        else if inputCaption
            h3.input__caption= inputCaption   
            input(class!=attributes.class placeholder!=attributes.placeholder type!=attributes.type name!=attributes.name)
        else
            input(class!=attributes.class placeholder!=attributes.placeholder type!=attributes.type name!=attributes.name)